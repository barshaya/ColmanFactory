@model IEnumerable<WebApplication_ColmanFactory1.Models.Product>

@{ ViewData["Title"] = "Index"; }
<h1 class="font-weight-lighter text-light">Items Found</h1>


<br />
<br />
<div class="card-group card-goup">
    <div class="row cardgrouprow">
        @foreach (var item in Model)
        {
            <div class="col-sm collumn">
            <div class="card btn-outline-dark btn-width">
            <a class="asp-style-card" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">
            <clickable>
                <img src=@item.imagePath class="" alt="...">
                <div class="">
                    <div class="">@item.Name</div>
                </div>
            </clickable>
        </a>
        <div class="">
            <h6 class="">Price : @item.Price ₪</h6>
            <form asp-controller="Carts" asp-action="AddProductToCart" asp-route-id="@item.Id" method="post">
                <button type="submit" class="btn btn-danger btn-sm card-background">
                    Add To Cart
                </button>
            </form>
        </div>
    </div>
</div>}


    </div>
</div>
@if (Model.ToList().Count == 0)
{
<h5> Product Not Found.</h5>}
