@model IEnumerable<WebApplication_ColmanFactory1.Models.Product>


@foreach (var item in Model)
{
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.imagePath)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsOnSale)
    </td>


    <td>
        <div class="btn-group">
            <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a class="text-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
            <a class="text-primary" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
        </div>
    </td>
</tr>           
}

