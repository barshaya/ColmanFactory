@model IEnumerable<WebApplication_ColmanFactory1.Models.Product>

@{
    ViewData["Title"] = "Women";
}

<div class="text-center">
    <h1 class="display-2">Women Shoes</h1>
    <p>Shoes for real ladies</p>
</div>

<div class="input-group mb-4">
    <input type="text" class="form-control" placeholder="Search a shoe..." aria-label="Search shoe" aria-describedby="basic-addon2">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button">Search</button>
    </div>
</div>

<div id="onSaleHead" class="row w-100 p-0 my-5">
    <div class="text-center col-md-6 make-red">
        <h2 class="display-3">You are a lady!</h2>
        <h5 class="display-4">Buy a lady shoe ...</h5>
        <img src="https://jooinn.com/images/sale-1.jpg" class="img-fluid w-50" />
    </div>

    <div id="carouselIndicators" class="carousel slide col-md-6 p-0" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselIndicators" data-slide-to="1"></li>
            <li data-target="#carouselIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://images.unsplash.com/photo-1583238620298-25dd9fa7f5cf?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://images.unsplash.com/photo-1515347619252-60a4bf4fff4f?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8d29tZW4lMjBzaG9lc3xlbnwwfDB8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://images.unsplash.com/photo-1507138170390-6625c5fd0115?ixid=MnwxMjA3fDB8MHxzZWFyY2h8OXx8d29tZW4lMjBzaG9lc3xlbnwwfDB8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="card-group mt-2">
    <div class="row ">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-2" style=" padding: .75rem; border: 1px solid; box-shadow: 0px 0px 0.1px 0.1px rgba(0,0,0,1);">
                    <img src="@item.imagePath" class="card-img-top" alt="item image">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-danger tex font-weight-bolder">Price: @item.Price₪</p>
                        <div class="card-buttons row justify-content-around">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                            <form asp-controller="Carts" asp-action="AddProductToCart" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-primary">
                                    Add To Cart
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

