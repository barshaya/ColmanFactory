<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication_ColmanFactory1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 nav-main-container">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Colman Factory</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Women">Women</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Men">Men</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Boys">Boys</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Girls">Girls</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/About" class="btn">About</a>
                        </li>
                        <li class="nav-item">
                            <div id="fb-root"></div>
                            <script async defer crossorigin="anonymous" src="https://connect.facebook.net/he_IL/sdk.js#xfbml=1&version=v11.0&appId=1163597744152928&autoLogAppEvents=1" nonce="jsD1P6RC"></script>
                            <div class="fb-share-button" data-href="https://www.linkpicture.com/q/ColmanFactory.png" data-layout="button" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore"></a></div>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-flex-item" asp-area="" asp-controller="Users" asp-action="Logout">
                                    <i class="far fa-user"></i>
                                    Log out
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark d-flex flex-column nav-flex-item" asp-action="MyCart" asp-controller="Carts" asp-area="">
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                    Cart
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-flex-item" asp-area="" asp-controller="Users" asp-action="Login">
                                    <i class="far fa-user"></i>
                                    Log in
                                </a>
                            </li>
                        }
                        @if (Context.User.IsInRole("Admin"))
                        {
                         <li class="nav-item dropdown">
                            <a class="btn dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                Manage
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="\Categories\Index">Categories</a></li>
                                <li><a class="dropdown-item" href="\Products\Index">Products</a></li>
                                <li><a class="dropdown-item" href="\Carts\Index">Carts</a></li>
                                <li><a class="dropdown-item" href="\Users\Index">Users</a></li>
                                <li><a class="dropdown-item" href="\Products\Statistics">Statistics</a></li>
                            </ul>
                         </li>
                         }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - WebApplication_ColmanFactory1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
